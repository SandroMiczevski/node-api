{
  "name": "node-api",
  "version": "1.0.0",
  "description": "Creating a Node API using Clean Architecture and Test Driven Development (TDD)",
  "main": "index.js",
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "npm run test:staged",
      "git add"
    ]
  },
  "scripts": {
    "test": "jest --watchAll",
    "test:staged": "jest",
    "prepare": "husky"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.9",
    "standard": "^17.1.0"
  }
}
